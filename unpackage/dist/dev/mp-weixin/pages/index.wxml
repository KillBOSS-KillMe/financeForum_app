<view class="index"><view class="page-section-spacing banner"><swiper class="swiper" indicator-dots="{{indicatorDots}}" indicator-color="rgba(255,255,255,.3)" indicator-active-color="#fff" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}"><block wx:for="{{pageNode.ad.aditems}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item><image class="bannerImg" data-id="{{item.id}}" data-link="{{item.link}}" src="{{imgUrl+item.image}}" mode="aspectFill" data-event-opts="{{[['tap',[['goBanner',['$event']]]]]}}" bindtap="__e"></image></swiper-item></block></swiper></view><view class="nav"><view class="nav-left"><scroll-view scroll-y="{{true}}"><block wx:for="{{categoryList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['categoryMainClick',['$0',index,'$1'],[[['categoryList','',index,'id']],[['categoryList','',index,'title']]]]]]]}}" class="nav-left-item" style="{{(index==categoryActive?'color:'+activeTextColor+';background-color:'+activeBackgroundColor:'')}}" bindtap="__e">{{''+item.title+''}}</view></block></scroll-view></view><view class="nav-right"><scroll-view scroll-y="true" data-event-opts="{{[['scrolltolower',[['toLowFun',['$event']]]]]}}" bindscrolltolower="__e"><block wx:for="{{subCategoryList}}" wx:for-item="item" wx:for-index="index2" wx:key="index2"><view data-event-opts="{{[['tap',[['categorySubClick',['$0'],[[['subCategoryList','',index2]]]]]]]}}" class="nav-right-item" bindtap="__e"><image src="{{imgUrl+item.photoalbums[0].path}}"></image><view class="navRightContent"><text>{{item.title}}</text><view class="applyInfo"><text class="time">{{item.created_at}}</text><text class="name">{{item.user.name}}</text><text>{{"评"+item.comments_count}}</text></view></view></view></block><block wx:if="{{isShow}}"><view class="null">暂无数据</view></block></scroll-view></view></view></view>