
.post{
	width: 690rpx;
	padding: 10rpx 30rpx;
}
.post .title{
	border: 1rpx solid #F8F8F8;
	padding: 0rpx 20rpx;
	border-radius: 10rpx;
	color: #999999;
	font-size: 30rpx;
	height: 80rpx;
	line-height: 80rpx;
}
.post .content{
	width: 630rpx;
	height: 240rpx;
	border: 1rpx solid #F8F8F8;
	padding: 28rpx;
	margin: 30rpx 0;
	border-radius: 10rpx;
}
.post .content textarea{
	height: 210rpx;
	width: 636rpx;
}
.post .content .tip{
	color: #999999;
	font-size: 28rpx;
	text-align: right;
}
.sound{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;	
	width: 638rpx;
	height: 28rpx;
	border: 1rpx solid #F8F8F8;
	border-radius: 10rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 26rpx;
	margin-bottom: 30rpx;
}
.sound text{
	font-size: 30rpx;
	font-weight: 600;
	color: #333333;
	margin-left: 16rpx;
}
.sound .address{
	color: #999999;
	font-weight: 200;
}
.enclosure{
	padding:0 30rpx 100rpx;
}
.enclosureList>icon{
	margin-right: 40rpx;
}
.submit{
	width: 630rpx;
	position: fixed;
	bottom: 60rpx;
	left: 60rpx;
}

