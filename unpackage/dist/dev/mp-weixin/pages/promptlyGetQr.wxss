
.promptlyGetQr {
	width: 690rpx;
	padding: 30rpx;
}
.item {
	width: 630rpx;
	height: 75rpx;
	background: #ffffff;
	-webkit-box-shadow: 0rpx 1rpx 36rpx 0rpx rgba(212, 212, 212, 0.6);
	        box-shadow: 0rpx 1rpx 36rpx 0rpx rgba(212, 212, 212, 0.6);
	-webkit-border-radius: 36rpx;
	        border-radius: 36rpx;
	margin-bottom: 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 0 30rpx;
}
.item input {
	font-size: 24rpx;
	font-weight: 700;
	color: #b2b2b2;
	width: 580rpx;
}
.item .iconfont {
	font-size: 24rpx;
	color: #19B7F8;
	margin-right: 16rpx;
}
.item .code {
	/* width: 153rpx; */
	background: rgba(101, 179, 233, 0.8);
	-webkit-box-shadow: 0rpx 1rpx 36rpx 0rpx rgba(212, 212, 212, 0.6);
	        box-shadow: 0rpx 1rpx 36rpx 0rpx rgba(212, 212, 212, 0.6);
	font-size: 26rpx;
	font-weight: 700;
	color: #ffffff;
	-webkit-border-radius: 60rpx;
	        border-radius: 60rpx;
	text-align: center;
