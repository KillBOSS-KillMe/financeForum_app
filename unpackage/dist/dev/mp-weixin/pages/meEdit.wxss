.moon{
	width: 690rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-align-content: center;
	        align-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.moon > view {
	width: 500rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-align-content: center;
	        align-content: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	text-align: right;
}
.moon > view > text {
	width: 460rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	text-align: right;
}
.iconfont{
	color: #DBDBDB;
}

