
.contactCustomer{
	width: 690rpx;
	padding: 20rpx 30rpx;
}
.contactCustomer .headList{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin-bottom: 20rpx;
}
.contactCustomer .headList .left{
	width: 435rpx;
	height: 230rpx;
	background: #19B7F8;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.contactCustomer .headList .right{
	width: 235rpx;
	background: #18CF7F;
	height: 230rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.contactCustomer .headList image{
	width: 96rpx;
	height: 96rpx;
}
.contactCustomer .headList .left image{
	margin-right: 24rpx;
}
.contactCustomer .headList text{
	font-size: 34rpx;
	font-weight: 600;
	color: #fff;
}
.contactCustomer .headList .right >view{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	width: 200rpx;
}
.contactCustomer .headList .right >view text{
	margin-top: 22rpx;
}
.contactCustomer .headList .vip{
	width: 112rpx;
	height: 48rpx;
}
.contactCustomer .list{
	margin: 20rpx 0;
}
.contactCustomer .list>text{
	font-size: 28rpx;
	color: #000;
	font-weight: 600;
	border-bottom: 2rpx solid #ececec;
	padding: 20rpx 0;
}
.contactCustomer .list .item{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	height: 88rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.contactCustomer .list .item text{
	width: 400rpx;
	border-bottom: 2rpx solid #ececec;
	font-size: 28rpx;
	color: #000;
	font-weight: 600;
	padding-bottom: 6rpx;
}
.contactCustomer .list .item view{
	font-size: 28rpx;
	color: #2390DC;
	/* font-weight: 600; */
	border: 1rpx solid #2390DC;
	border-radius: 10rpx;
	padding: 6rpx 16rpx;
}

