<view><view class="list"><block wx:for="{{list}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="item"><block wx:if="{{item.theme_pic!=''}}"><image src="{{imgUrl+item.theme_pic}}" mode="aspectFill" data-id="{{item.post_id}}" data-event-opts="{{[['tap',[['geDetail',['$event']]]]]}}" bindtap="__e"></image></block><block wx:else><image src="../static/a.jpg" mode="aspectFill" data-id="{{item.post_id}}" data-event-opts="{{[['tap',[['geDetail',['$event']]]]]}}" bindtap="__e"></image></block><view class="con"><view class="title" data-id="{{item.post_id}}" data-event-opts="{{[['tap',[['geDetail',['$event']]]]]}}" bindtap="__e">{{item.title}}</view><view class="info"><text>{{item.publish_time}}</text><text>{{item.comments_count+"评"}}</text><text class="del" data-index="{{index}}" data-event-opts="{{[['tap',[['deleteItem',['$event']]]]]}}" bindtap="__e">删除</text></view></view></view></block></block></view></view>