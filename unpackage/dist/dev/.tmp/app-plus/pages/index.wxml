<view class="index"><page-search vue-id="1" bind:__l="__l"></page-search><view class="page-section-spacing banner"><swiper class="swiper" indicator-dots="{{indicatorDots}}" indicator-color="rgba(255,255,255,.3)" indicator-active-color="#fff" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}"><block wx:for="{{pageNode.ad.aditems}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item><image class="bannerImg" data-id="{{item.id}}" data-link="{{item.link}}" src="{{imgUrl+item.image}}" mode="aspectFill" data-event-opts="{{[['tap',[['goBanner',['$event']]]]]}}" bindtap="__e"></image></swiper-item></block></swiper></view><view class="nav"><block wx:for="{{pageNode.navs}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="navList" data-bind_board="{{item.bind_board}}" data-name="{{item.name}}" data-link="{{item.link}}" data-event-opts="{{[['tap',[['goNavs',['$event']]]]]}}" bindtap="__e"><image src="{{imgUrl+item.icon}}" mode="aspectFill"></image><text>{{item.name}}</text></view></block></block></view><view class="content"><view class="inv-h-w"><block wx:for="{{pageNode.board_data}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="{{['inv-h',Inv==index?'inv-h-se':'']}}" data-index="{{index}}" data-block_id="{{item.block_id}}" data-event-opts="{{[['tap',[['selListType',['$event']]]]]}}" bindtap="__e">{{item.title}}</view></block></block></view><view class="contentList"><block wx:for="{{pageNode.board_data[Inv].posts}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="item" data-id="{{item.id}}" data-event-opts="{{[['tap',[['goDetail',['$event']]]]]}}" bindtap="__e"><block wx:if="{{item.photoalbums.length>0}}"><image src="{{imgUrl+item.photoalbums[0].path}}" mode="aspectFill"></image></block><block wx:else><image src="../static/a.jpg" mode="aspectFill"></image></block><view class="itemRight"><text class="title">{{item.title}}</text><view class="itemCon"><text>{{item.created_at}}</text><text>用户名</text><text>{{item.comments_count+"评"}}</text></view></view></view></block></block></view></view></view>